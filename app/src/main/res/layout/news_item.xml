<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/gap_sm">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_bg"
            android:elevation="@dimen/gap_md"
            android:padding="@dimen/gap_lg">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How To Keep your phone Safe from the cyber threats"
                    android:textColor="@color/text_clr"
                    android:textSize="@dimen/font_lg"
                    android:maxLines="2"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How To Keep your phone Safe from the cyber threats"
                    android:textColor="@color/text_clr_light"
                    android:textSize="@dimen/font_md"
                    android:maxLines="4"/>

                <TextView
                    android:id="@+id/pub_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 min"
                    android:layout_marginTop="@dimen/gap_sm"
                    android:textColor="@color/text_clr_light"
                    android:textSize="@dimen/font_md"/>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="100dp"
                app:cardCornerRadius="@dimen/gap_md"
                app:cardElevation="3dp"
                android:layout_margin="3dp"
                app:cardBackgroundColor="@color/app_bg"
                android:layout_gravity="end|center_vertical">

                <ImageView
                    android:id="@+id/news_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/news_placeholder"/>

            </androidx.cardview.widget.CardView>

        </FrameLayout>
    </LinearLayout>
</layout>