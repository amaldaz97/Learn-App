<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.activities.SplashScreenActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_bg">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="300dp"
                android:layout_height="300dp"
                app:lottie_autoPlay="true"
                android:padding="@dimen/gap_md"
                android:paddingStart="@dimen/gap_lg"
                android:paddingEnd="@dimen/gap_lg"
                app:lottie_rawRes="@raw/learning"
                app:lottie_loop="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="100dp"
                android:textSize="@dimen/font_xxxl"
                android:textColor="@color/app_selection_clr"
                android:text="@string/app_name"/>

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                app:lottie_autoPlay="true"
                app:lottie_rawRes="@raw/loading"
                app:lottie_loop="true" />

        </LinearLayout>

    </FrameLayout>

</layout>